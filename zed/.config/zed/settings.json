{
	"vim_mode": true,
	"ui_font_size": 18,
	"buffer_font_size": 20,
	"buffer_font_family": "JetBrainsMono Nerd Font",
	"current_line_highlight": "none",
	"cursor_shape": "block",
	"tab_size": 2,
	"hard_tabs": true,
	"format_on_save": "on",
	"formatter": "auto",
	"enable_language_server": true,
	"vertical_scroll_margin": 8,
	"cursor_blink": false,
	"relative_line_numbers": "enabled",
	"ensure_final_newline_on_save": true,
	"remove_trailing_whitespace_on_save": true,
	"tab_bar": {
		"show": false
	},
	"tabs": {
		"git_status": true
	},
	"inlay_hints": {
		// to enable you define it to true in LSP config down below
		"enabled": false
	},
	"scrollbar": {
		"show": "never"
	},
	"toolbar": {
		"breadcrumbs": true,
		"quick_actions": true
	},
	// Move all panel to the right
	"project_panel": {
		"button": true,
		"dock": "left",
		"git_status": true
	},
	"outline_panel": {
		"dock": "right"
	},
	"collaboration_panel": {
		"dock": "left"
	},
	// Move some unnecessary panels to the left
	"notification_panel": {
		"dock": "left"
	},
	// Themes
	"theme": "Catppuccin Macchiato (Blur)",
	// LSP Config
	"lsp": {
		"tailwindcss-language-server": {
			"settings": {
				"classAttributes": ["class", "className", "ngClass", "styles"]
			}
		},
		"gppls": {},
		"rust-analyzer": {}
	},
	"languages": {
		// Refer https://zed.dev/docs/languages/javascript and https://zed.dev/docs/languages/typescript for more info
		"JavaScript": {
			"tab_size": 2
			// "formatter": "language_server"
		},
		"TypeScript": {
			// Refer https://github.com/jellydn/ts-inlay-hints for how to setup for Neovim and VSCode
			"inlay_hints": {
				"enabled": false,
				"show_parameter_hints": false,
				"show_other_hints": true,
				"show_type_hints": true //shows type hints right in the line
			},
			"tab_size": 2
		},
		"JSON": {
			"tab_size": 2
		},
		"Python": {
			"formatter": {
				"language_server": {
					"name": "ruff"
				}
			},
			"language_servers": ["pyright", "ruff"]
		}
	}
}
